<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFramework>net5.0</TargetFramework>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<IsPackable>true</IsPackable>
		<PackageDescription>Evaluates PowerFX expression</PackageDescription>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>0.0.9.5</Version>
		<Authors>Natraj Yegnaraman</Authors>
		<Product>PowerFx.NET.Interactive</Product>
		<PackageId>PowerFx.NET.Interactive</PackageId>
		<Description>Power Fx Kernel for .NET Interactive</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReleaseNotes>1. Initial release</PackageReleaseNotes>
		<PackageProjectUrl>https://github.com/rajyraman/Power-Fx-.NET-Interactive</PackageProjectUrl>
		<RepositoryUrl>https://github.com/rajyraman/Power-Fx-.NET-Interactive</RepositoryUrl>
		<PackageTags>powerfx,.netinteractivenotebook,powerapps</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="bin\**" />
		<EmbeddedResource Remove="bin\**" />
		<None Remove="bin\**" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="PowerFxExtension.cs" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="microsoft.dotnet.interactive" Version="1.0.0-beta.21559.2" />
		<PackageReference Include="microsoft.dotnet.interactive.csharp" Version="1.0.0-beta.21559.2" />
		<PackageReference Include="Microsoft.PowerFx.Core" Version="0.2.1-preview" />
		<PackageReference Include="Microsoft.PowerFx.Interpreter" Version="0.2.1-preview" />
		<PackageReference Include="Microsoft.PowerFx.LanguageServerProtocol" Version="0.2.1-preview" />
		<PackageReference Include="System.Collections" Version="4.3.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="$(OutputPath)/PowerFXDotNetInteractive.dll" Pack="true" PackagePath="interactive-extensions/dotnet" />
	</ItemGroup>

</Project>
